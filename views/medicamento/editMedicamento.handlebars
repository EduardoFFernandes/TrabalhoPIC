<div class="title-panel"><h1>Atualize o Medicamento</h1></div>
<div class="home-panel"><a href="/list-medicamento"><i class="fas fa-home fa-3x"></i></a></div>
<div class="form-style-5">
    <form id="medicamentoForm" action="/edit-medicamento" method="post">
        <fieldset>
            {{#each data}}
            <legend><span class="number">1</span> Medicamento</legend>
            <input type="hidden" name="id" id="id" value="{{id}}">
            <input type="text" name="nome" 
            id="nome" placeholder="Nome do medicamento *" value="{{nome}}">
            <textarea name="descricaoTextarea" id="descricaoTextarea" cols="30" rows="10"></textarea>
            <input type="hidden" name="descricao" id="descricao" value="{{descricao}}">
            <input type="submit" value="Apply" />
            {{/each}}
        </fieldset>
    </form>
</div>
<script>
    document.getElementById("descricaoTextarea").value = document.getElementById("descricao").value
    document.getElementById("medicamentoForm").onsubmit = function() {
        document.getElementById("descricao").value = document.getElementById("descricaoTextarea").value
    }
</script>